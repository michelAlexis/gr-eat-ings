generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  shadowDatabaseUrl    = env("DATABASE_URL_SHADOW")
  referentialIntegrity = "prisma"
}

enum IngredientUnit {
  unique
  gr
  kg
  ml
  l
}

model Ingredient {
  id String @id @default(cuid())

  name           String         @db.VarChar(100)
  unitRef        IngredientUnit
  quantityRef    Int
  nutritionRefId String         @unique
  nutritionRef   Nutrition      @relation(fields: [nutritionRefId], references: [id])

  // audit
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  IngredientQuantity IngredientQuantity[]

  @@fulltext([name])
}

model Nutrition {
  id String @id @default(cuid())

  ingredient Ingredient?

  kcal Int?
  // TODO Add fat, carb, prot, ...

  // audit
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recipe {
  id String @id @default(cuid())

  name          String @db.VarChar(100)
  sizeReference Int

  // audit
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  IngredientQuantity IngredientQuantity[]
}

model IngredientQuantity {
  id String @id @default(cuid())

  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id])

  ingredientId String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])

  quantity Float @db.Float
  unit     Unit

  // audit
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([recipeId, ingredientId])
}

enum Unit {
  unique
  gr
  kg
  ml
  l
}
